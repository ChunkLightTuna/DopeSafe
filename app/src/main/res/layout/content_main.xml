<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.unh.cs.android.dopesafe.MainActivity">
    <!--tools:showIn="@layout/activity_main">-->

    <Button
        android:id="@+id/start_button"

        android:layout_width="275dp"
        android:layout_height="260dp"
        android:layout_alignTop="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round_button"
        android:text="@string/start_button_text"
        android:textColor="@color/colorMaterialGrey300"
        android:textSize="55sp"
        android:textStyle="normal"
        android:typeface="normal"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top|center_horizontal"
        android:text="@string/default_time"
        android:textColor="@color/colorMaterialGrey300"
        android:textIsSelectable="false"
        android:textSize="110sp"
        android:typeface="normal"/>

    <!--<SeekBar-->
    <!--android:id="@+id/stop_button"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="75dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:max="100"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:background="@color/bright_foreground_disabled_material_light"-->
    <!--android:text=" STOP"-->
    <!--android:progressDrawable="@android:color/transparent"-->
    <!--android:thumb="@android:drawable/ic_input_add"-->
    <!--android:textSize="50sp"/>-->

    <Switch
        android:id="@+id/stop_button"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorDarkGray"
        android:switchMinWidth="150dp"
        android:layout_marginLeft="10dp"
        android:text="@string/stop_button_text"
        android:textColor="@color/colorMaterialGrey300"
        android:textOff="STOP"
        android:textOn=""
        android:textSize="50sp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="60000"
        android:progress="0"
        android:progressDrawable="@drawable/circular_progress_bar"/>

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_small"/>


</RelativeLayout>
